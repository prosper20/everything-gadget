extends baseEmail

block content
  p Hi #{firstName},
  p Welcome to Everything-Gadget, we're glad to have you 🎉🙏
  p Waste no time, log in to your account and start shopping:
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Shop Now
